[global]
  font = tamsyn 12

  # Show how many messages are currently hidden (because of geometry).
  indicate_hidden = yes
  show_indicators = no
  word_wrap = yes
  separator_height = 0
  alignment = center
  geometry = x2
  padding = 6

  allow_markup = yes
  format = "<b>%s %p</b> %b"
  ignore_newline = yes

  follow = mouse

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#2d89ef"
    foreground = "#ffffff"
    timeout = 10

[urgency_normal]
