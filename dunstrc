[global]
  font = Cartograph MonoCF Light 30

  # Show how many messages are currently hidden (because of geometry).
  indicate_hidden = yes
  show_indicators = no
  word_wrap = yes
  separator_height = 0
  alignment = center
  geometry = x2
  padding = 12

  allow_markup = yes
  format = "%s %p %b"
  ignore_newline = yes

  follow = mouse

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    #background = "#2d89ef"
    #foreground = "#ffffff"
    background = "#1c1c1c"
    foreground = "#ABB2BF"
    timeout = 2

[urgency_normal]
    # green, but normal urgency does not always map well, see guard or node-growl
    # background = "#99b433"
    background = "#7e3878"
    foreground = "#ffffff"
    timeout = 4

[urgency_critical]
    background = "#da532c"
