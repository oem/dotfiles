# Increase volume
"sh $HOME/dotfiles/sound.sh up"
    m:0x0 + c:123
    XF86AudioRaiseVolume

# Decrease volume
"sh $HOME/dotfiles/sound.sh down"
    m:0x0 + c:122
    XF86AudioLowerVolume

# Toggle mute
"sh $HOME/dotfiles/sound.sh mute"
    m:0x0 + c:121
    XF86AudioMute

"sh $HOME/dotfiles/brightness.sh inc"
    m:0x0 + c:233
    XF86MonBrightnessUp

"sh $HOME/dotfiles/brightness.sh dec"
    m:0x0 + c:232
    XF86MonBrightnessDown
