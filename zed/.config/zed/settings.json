// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "edit_predictions": {
    "mode": "eager"
  },
  "show_whitespaces": "all",
  "terminal": {
    "dock": "right",
  },
  "inlay_hints": {
    "enabled": true,
  },
  "soft_wrap": "editor_width",
  "diagnostics": {
    "inline": { "enabled": true },
  },
  "format_on_save": "on",
  "title_bar": { "show_user_picture": false },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4",
    },
  },
  "context_servers": {
    "mcp-server-brave-search": {
      "enabled": true,
      "settings": {
        "brave_api_key": "YOUR_API_KEY",
      },
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://127.0.0.1:3845/sse"],
      "env": {},
    },
    "mcp-server-context7": {
      "settings": {
        "default_minimum_tokens": "10000",
      },
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
    },
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "theme": "Nixdorf 8870 Dark",
  "ui_font_size": 18,
  "ui_font_family": "Berkeley Mono",
  "buffer_font_size": 16.0,
  "remove_trailing_whitespace_on_save": true,
  "buffer_font_family": "Berkeley Mono",
  "scrollbar": { "show": "never" },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
  },
  "vertical_scroll_margin": 0,
  "tab_bar": { "show": true },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
  },
  "languages": {
    "JavaScript": {
      "prettier": { "allowed": false },
      "formatter": { "language_server": { "name": "biome" } } },
    "Vue.js": {
      "formatter":["prettier", { "language_server": { "name": "biome" } } ],
    },
    "Astro": {
      "language_servers": ["astro-language-server", "..."],
      "formatter":["prettier", { "language_server": { "name": "biome" } } ],
    },
    "TypeScript": {
      "prettier": { "allowed": false },
      "formatter": { "language_server": { "name": "biome" } },
    },
    "TSX": { "formatter": { "language_server": { "name": "biome" } } },
    "JSON": { "formatter": { "language_server": { "name": "biome" } } },
    "JSONC": { "formatter": { "language_server": { "name": "biome" } } },
    "CSS": { "formatter": { "language_server": { "name": "biome" } } },
    "GraphQL": { "formatter": { "language_server": { "name": "biome" } } },
    "Python": {
      "language_servers": ["pyright", "ruff", "autopep8"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "Jinja2 HTML": {
      "language_servers": ["jinja2-html-lsp"],
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false,
    },
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true,
      },
    },
    "jinja2-html-lsp": {
      "binary": {
        "path": "python",
        "arguments": ["-m", "server.main"],
      },
      "settings": {
        "jinja2": {
          "enable_emmet": true,
          "enable_jinja_snippets": true,
          "auto_close_tags": true,
        },
      },
    },
  },
}
